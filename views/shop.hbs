<div class="row" id="row">
    <section class="main col-md-9">
        {{#if data.items}}
        {{#each data.items}}
        <div class="row" style="background-color:yelow;">
            <div id="img" style="width:200px; height:200px; margin-left:50px;">
                <img src="{{featureImage}}" alt="feature Image" style="width:165px; height:120px;" />
            </div>

            <h2 style="margin-top:-187px; margin-bottom:100px; margin-left:336px;"><strong>{{title}}</strong></h2>

            <div id="content" style="margin-top: -74px;margin-bottom: 60px; margin-left:369px;">
                <strong>Category:</strong> {{category}}<br />
                <strong>Realeased on:</strong> {{postDate}}
            </div>

        </div>
        {{/each}}
        {{else}}
        <div class="col-md-12 text-center">
            <h2>{{data.message}}</h2>
            <p>Please try another Post / Category</p>
        </div>
        {{/if}}
    </section>

    <aside class="col-md-3">
        <br /><br />
        {{#if data.items}}

        <div id="songs"
            style="margin-top:-89%; margin-left:75%; display:table; padding:10px; border: 1px solid #ccc;  border-radius: 4px; ">
            <h4
                style="margin-top: 0; text-align: center; text-shadow: 0 0 5px #ffffff, 0 0 10px #ffffff, 0 0 15px #ffffff, 0 0 20px #00e6e6, 0 0 30px #00e6e6, 0 0 80px #00e6e6, 0 0 100px #00e6e6, 0 0 150px #00e6e6; font-size:25px">ITEMS</h4>


            <ul class="list-group" style="list-style-type:none; padding:0; margin:0;">
                {{#each data.items}}
                <li style="display:table-row; "><a href="/shop/{{id}}?category={{../viewingCategory}}"
                        class="list-group-item"
                        style="color:antiquewhite; text-align:center; display: table-cell;padding: 5px;border-bottom: 1px solid #ccc;text-decoration: none;">{{title}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        {{/if}}

        {{#if data.categories}}
        <div id="Categories" style="margin-top:4%; margin-left:75%;">
            <h4>Categories</h4>

            <ul class="list-group">
                {{#each data.categories}}
                <li><a href="/shop?category={{id}}" class="list-group-item">{{category}}</a></li>
                {{/each}}
            </ul>
        </div>
        {{/if}}
    </aside>
</div>
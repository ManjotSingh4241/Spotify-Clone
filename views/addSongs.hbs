<div class="container" style="padding-top: 90px;">
  <form method="post" action="/songs/add" enctype="multipart/form-data">
    <fieldset>
      <legend>Feature Image</legend>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <input class="form-control" id="featureImage" name="featureImage" type="file" />
          </div>
        </div>
      </div>
    </fieldset>
    <br />
    <fieldset>  
      <legend>Post Content</legend>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="title">Song Name:</label>
            <input class="form-control" id="title" name="title" type="text" />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="price">Song Link:</label>
            <input class="form-control" id="audioUrl" name="audioUrl" type="file" />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="body">Description:</label>
            <textarea class="form-control" id="body" name="body" rows="15"></textarea>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="category">Category:</label>
            <select class="form-control" name="category" id="category">
              <option value="1">Punjabi</option>
              <option value="2">Hindi</option>
              <option value="3">English</option>
              <option value="4">Other</option>
            </select>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="category">Visibility:</label>
            <div class="checkbox">
              <label>
                <input type="checkbox" name="published" id="published" />
                Published
              </label>
            </div>
          </div>
        </div>
      </div>
    </fieldset>
    <hr />
    <input type="submit" class="btn btn-primary pull-right" value="Add Post" /><br /><br /><br />
  </form>
</div>